<%# app/views/lists/_add_new_list_placeholder.html.erb %>
<%= form_with(model: List.new, url: lists_path, method: :post,
              id: "add_new_list_placeholder", # ID estático para ser alvo de replace
              data: {
                controller: "placeholder-form-manager",
                placeholder_form_manager_main_button_id_value: "main_new_list_button",
                turbo_frame: "_top" # Garante que a resposta do stream afete a página toda, não um frame específico
              }) do |form| %>

  <%# O controller definirá o nome padrão se este vier vazio %>
  <%= form.hidden_field :name, value: "" %>

  <button type="submit"
          class="bg-gray-100 hover:bg-gray-200 shadow-lg rounded-lg border-2 border-dashed border-gray-400 w-full sm:w-[300px] h-[100px] flex-shrink-0 flex items-center justify-center p-6 cursor-pointer">
    <span class="text-gray-500 text-xl font-semibold"><%= t("lists.new-list") %></span>
  </button>
<% end %>
